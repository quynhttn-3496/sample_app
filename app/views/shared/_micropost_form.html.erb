<%= form_with(model: @micropost) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("micropost.compose") %>
  </div>
  <span class="image">
    <%= f.file_field :image, accept: Settings.accept_file.join(",") %>
  </span>
  <%= f.submit t("micropost.post"), class: "btn btn-primary" %>
<% end %>
