<% provide :title, t("home") %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "micropost.feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <h1><%= t "home" %></h1>
  <p>
    <%= t "home_message1" %>
    <%= link_to Settings.ruby_tutotial_link do %>
      <%= t "home_link" %>
    <% end %>
    <%= t "home_message2" %>
  </p>
<% end %>
